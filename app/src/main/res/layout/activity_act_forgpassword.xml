<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".act_forgpassword">

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="104dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="478dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-31dp"
        app:srcCompat="@drawable/logobase" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="405dp"
        android:layout_height="490dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/rectangle" />

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:layout_marginBottom="185dp"
        android:background="@drawable/btn_enviar" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:ems="10"
        android:hint="Correo ElectrÃ³nico"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txt_indicaciones"
        android:layout_width="287dp"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginBottom="240dp"
        android:text="@string/ingrese_su_correo_electr_nico_y_le_enviaremos_las_instrucciones_de_como_restaurarla"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="123dp"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="631dp"
        android:background="@drawable/btn_atras"
        android:onClick="atras"
        android:textColor="#C7C7C7"
        tools:ignore="HardcodedText" />

</RelativeLayout>